<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
  
  <!-- AOP Advice - Ingest -->
  <bean id="ingestAdvice" class="org.duracloud.durastore.aop.IngestAdvice" >
    <property name="jmsTemplate" ref="ingestJmsTemplate" />
    <property name="destination" ref="ingestDestination" />
    <property name="order" value="3" />
    <property name="securityContextUtil" ref="securityContextUtil"/>
  </bean>
  
  <bean id="ingestAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="ingestAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.addContent"/>
  </bean>

  <!-- AOP Advice - Copy Content -->
  <bean id="contentCopyAdvice" class="org.duracloud.durastore.aop.ContentCopyAdvice" >
    <property name="jmsTemplate" ref="contentCopyJmsTemplate" />
    <property name="destination" ref="copyContentDestination" />
    <property name="order" value="3" />
    <property name="securityContextUtil" ref="securityContextUtil"/>
  </bean>

  <bean id="contentCopyAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="contentCopyAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.copyContent"/>
  </bean>

  <!-- AOP Advice - Content Update -->
  <bean id="contentUpdateAdvice" class="org.duracloud.durastore.aop.ContentUpdateAdvice" >
    <property name="jmsTemplate" ref="contentJmsTemplate" />
    <property name="destination" ref="updateContentDestination" />
    <property name="order" value="3" />
    <property name="securityContextUtil" ref="securityContextUtil"/>
  </bean>

  <bean id="contentUpdateAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="contentUpdateAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.setContentProperties"/>
  </bean>

  <!-- AOP Advice - Content Delete -->
  <bean id="contentDeleteAdvice" class="org.duracloud.durastore.aop.ContentDeleteAdvice" >
    <property name="jmsTemplate" ref="contentJmsTemplate" />
    <property name="destination" ref="deleteContentDestination" />
    <property name="order" value="3" />
    <property name="securityContextUtil" ref="securityContextUtil"/>
  </bean>

  <bean id="contentDeleteAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="contentDeleteAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.deleteContent"/>
  </bean>

  <!-- AOP Advice - Space Create -->
  <bean id="spaceCreateAdvice" class="org.duracloud.durastore.aop.SpaceCreateAdvice" >
    <property name="jmsTemplate" ref="spaceJmsTemplate" />
    <property name="destination" ref="createSpaceDestination" />
    <property name="order" value="3" />
    <property name="securityContextUtil" ref="securityContextUtil"/>
  </bean>

  <bean id="spaceCreateAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="spaceCreateAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.createSpace"/>
  </bean>

  <!-- AOP Advice - Space ACL Update -->
  <bean id="spaceAclUpdateAdvice" class="org.duracloud.durastore.aop.SpaceAclUpdateAdvice" >
    <property name="jmsTemplate" ref="spaceJmsTemplate" />
    <property name="destination" ref="updateSpaceAclDestination" />
    <property name="order" value="3" />
    <property name="securityContextUtil" ref="securityContextUtil"/>
  </bean>

  <bean id="spaceAclUpdateAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="spaceAclUpdateAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.setSpaceACLs"/>
  </bean>

  <!-- AOP Advice - Space Delete -->
  <bean id="spaceDeleteAdvice" class="org.duracloud.durastore.aop.SpaceDeleteAdvice" >
    <property name="jmsTemplate" ref="spaceJmsTemplate" />
    <property name="destination" ref="deleteSpaceDestination" />
    <property name="order" value="3" />
    <property name="securityContextUtil" ref="securityContextUtil"/>
  </bean>

  <bean id="spaceDeleteAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="spaceDeleteAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.deleteSpace"/>
  </bean>

  <!-- AOP Advice - Retry -->
  <bean id="retryAdvice" class="org.duracloud.durastore.aop.RetryAdvice" >
    <property name="maxRetries" value="3" />
    <property name="waitTime" value="3000" /> <!-- Milliseconds between attempts -->
    <property name="order" value="1" /> <!-- Advice ordering, retry has highest precedence -->
  </bean>

  <bean id="retryAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="retryAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.*"/>
  </bean>

  <!-- AOP Advice - Verify Space Creation -->
  <bean id="verifySpaceCreationAdvice" class="org.duracloud.durastore.aop.VerifySpaceCreationAdvice" >
    <property name="maxRetries" value="3" />
    <property name="waitTime" value="3000" /> <!-- Milliseconds between checks -->
    <property name="order" value="3" />    
  </bean>

  <bean id="verifySpaceCreationAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="verifySpaceCreationAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.createSpace"/>
  </bean>

  <!-- AOP Advice - Verify Space Deletion -->
  <bean id="verifySpaceDeletionAdvice" class="org.duracloud.durastore.aop.VerifySpaceDeletionAdvice" >
    <property name="maxRetries" value="3" />
    <property name="waitTime" value="3000" /> <!-- Milliseconds between checks -->
    <property name="order" value="3" />    
  </bean>

  <bean id="verifySpaceDeletionAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
    <property name="advice" ref="verifySpaceDeletionAdvice"/>
    <property name="pattern" value=".*StatelessStorageProvider.deleteSpace"/>
  </bean>

  <!-- Enables Auto-AOP Proxy Creation -->
  <bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>
  
</beans>