<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

  <!-- REST API resources -->
  <bean id="initRest" class="org.duracloud.duraservice.rest.InitRest" >
    <constructor-arg ref="serviceResource"/>
    <constructor-arg ref="restUtil"/>
  </bean>

  <bean id="serviceRest" class="org.duracloud.duraservice.rest.ServiceRest" >
    <constructor-arg ref="serviceResource"/>
    <constructor-arg ref="restUtil"/>
  </bean>

  <bean id="securityRest" class="org.duracloud.duraservice.rest.SecurityRest">
    <constructor-arg ref="userDetailsSvc" />
    <constructor-arg ref="restUtil"/>
  </bean>

  <!-- Domain Beans -->
  <bean id="securityContextUtil" class="org.duracloud.security.context.SecurityContextUtil"/>

  <bean id="contentStoreManagerUtil" class="org.duracloud.duraservice.mgmt.ContentStoreManagerUtil">
    <constructor-arg ref="securityContextUtil"/>
  </bean>

  <bean id="serviceConfigUtil" class="org.duracloud.duraservice.mgmt.ServiceConfigUtil">
    <constructor-arg ref="contentStoreManagerUtil"/>
  </bean>

  <bean id="serviceComputeInstanceUtil" class="org.duracloud.duraservice.mgmt.ServiceComputeInstanceUtil"/>

  <bean id="servicesManager" class="org.duracloud.duraservice.mgmt.ServiceManager" >
    <constructor-arg ref="contentStoreManagerUtil"/>
    <constructor-arg ref="serviceConfigUtil"/>
    <constructor-arg ref="serviceComputeInstanceUtil"/>
  </bean>

  <bean id="serviceResource" class="org.duracloud.duraservice.rest.ServiceResourceImpl">
    <constructor-arg ref="servicesManager"/>
  </bean>

  <bean id="restUtil" class="org.duracloud.common.rest.RestUtilImpl"/>
  
</beans>